# ============================================================================
# REQUIRED - Firebase Configuration (REQUERIDO)
# ============================================================================
# Estos valores son OBLIGATORIOS para que Firebase funcione
# These values are REQUIRED for Firebase to work

NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# ============================================================================
# OPTIONAL - Additional Firebase Configuration (OPCIONAL)
# ============================================================================
# Estos valores son opcionales pero recomendados
# These values are optional but recommended

NEXT_PUBLIC_FIREBASE_DATABASE_URL=
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

